@model List<CRUDWEB.Models.Movimiento>

@{
    ViewBag.Title = "Consultar Movimientos";
}

<h2>Consultar Movimientos</h2>

<a href="@Url.Action("Nuevo", "MovimientosMVC")" class="btn btn-success">Nuevo Movimiento</a>

<form method="get" action="@Url.Action("Consultar", "MovimientosMVC")">
    <div class="form-group">
        <label for="FechaInicio">Fecha Inicio:</label>
        <input type="text" name="fechaInicio" class="form-control" />
    </div>
    <div class="form-group">
        <label for="FechaFin">Fecha Fin:</label>
        <input type="text" name="fechaFin" class="form-control" />
    </div>
    <div class="form-group">
        <label for="TipoMovimiento">Tipo Movimiento:</label>
        <input type="text" name="tipoMovimiento" class="form-control" />
    </div>
    <div class="form-group">
        <label for="NroDocumento">Número de Documento:</label>
        <input type="text" name="nroDocumento" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Consultar</button>
</form>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Compañía</th>
                <th>Almacén</th>
                <th>Tipo Movimiento</th>
                <th>Tipo Documento</th>
                <th>Número Documento</th>
                <th>Item</th>
                <th>Cantidad</th>
                <th>Destino</th>
                <th>Fecha Transacción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movimiento in Model)
            {
                <tr>
                    <td>@movimiento.COMPANIA_VENTA_3</td>
                    <td>@movimiento.ALMACEN_VENTA</td>
                    <td>@movimiento.TIPO_MOVIMIENTO</td>
                    <td>@movimiento.TIPO_DOCUMENTO</td>
                    <td>@movimiento.NRO_DOCUMENTO</td>
                    <td>@movimiento.COD_ITEM_2</td>
                    <td>@movimiento.CANTIDAD</td>
                    <td>@movimiento.COMPANIA_DESTINO</td>
                    <td>@movimiento.FECHA_TRANSACCION</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron movimientos.</p>
}
